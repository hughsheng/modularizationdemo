<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--状态栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中颜色-->
        <item name="colorAccent">@color/blue</item>
        <!--文字颜色主体-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--去掉点击水波纹效果-->
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <!--activity支持5.0动画跳转-->
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="AppTheme.welcome" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/bg_default</item>
    </style>

    <!--沉侵式布局-->
    <style name="AppTheme.windowTranslucent" parent="AppTheme">
        <!--布局内容延展到状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="AppTheme.animation" parent="AppTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowEnterAnimation">@transition/slide</item>
        <item name="android:windowReenterTransition">@transition/slide</item>
    </style>


    <style name="RecycleViewTheme" parent="AppTheme">
        <item name="android:listDivider">@drawable/recycleviewdivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- 更换Toolbar OVerFlow menu icon -->
        <!--<item name="actionOverflowButtonStyle">@style/OverFlowIcon</item>-->
        <!-- 设置 toolbar 溢出菜单的文字的颜色 -->
        <!--<item name="android:textColor">@android:color/holo_red_dark</item>-->
        <!-- 设置 显示在toobar上菜单文字的颜色 -->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- 设置该属性边距为0dp-->
        <item name="contentInsetStart">0dp</item>
        <!-- 设置toolbar 弹出菜单的字体大小和溢出菜单文字大小-->
        <!--<item name="android:textSize">15sp</item>-->
    </style>

    <style name="OverFlowIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="DialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
